<header class="block sm:hidden" x-data="{show: false}" @click.away="show = false">
    <div class="mt-8">
        <div class="mb-6 mp-4 text-center">
            <a class="site-title" href="/">
                {{ site.nmf_earth_prefix }}<span class="text-primary">.</span>{{ site.nmf_earth_suffix }}
            </a>
        </div>
        <div class="flex justify-center pl-6 pr-6">
            <div @click="show = !show" class="w-full text-center mb-6 cursor-pointer">
                <div aria-label="menu" class="no-underline text-lg font-semibold">
                    {% badge "Menu", "menu" %}
                </div>
            </div>
        </div>
        <nav x-show="show" class="main-container text-center flex-col sm:flex-row space-x-0 sm:space-x-6">
            {% for item in collections.page %}
                <div class="pb-4 md:pb-0">
                    {% if item.url == page.url %}
                        <a aria-label="{{ item.data.title }}" class="no-underline hover:hover-link text-black font-semibold" href="{{ item.url }}">
                            {{ item.data.title }}
                        </a>
                    {% endif %}
                    {% if item.url != page.url %}
                        <a aria-label="{{ item.data.title }}" class="text-gray-600 no-underline hover:hover-link" href="{{ item.url }}">
                            {{ item.data.title }}
                        </a>
                    {% endif %}
                </div>
            {% endfor %}
            {% if site.newsletter_url %}
                <div class="pb-4 md:pb-0">
                    <a aria-label="newletter" class="text-gray-500 no-underline hover:hover-link" href="{{ site.newsletter_url }}" target="_blank" rel="noopener">
                        Newsletter
                    </a>
                </div>
            {% endif %}
        </nav>
    </div>
</header>
